@model OU3.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<h2>Delete Movie</h2>

<div>
    <h4>Are you sure you want to delete the movie "@Model.Title"?</h4>
    <p><strong>Director:</strong> @Model.Director</p>
    <p><strong>Year:</strong> @Model.Year</p>
    <p><strong>Copies Available:</strong> @Model.CopiesAvailable</p>
</div>

<form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.FilmID">
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="SelectMovies" class="btn btn-secondary">Cancel</a>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

