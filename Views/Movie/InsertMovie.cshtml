@{
    ViewData["Title"] = "Insert Movie";
}

<h2>Insert Movie</h2>

<form method="post" asp-action="InsertMovie">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" required />
    </div>
    <div class="form-group">
        <label for="Director">Director</label>
        <input type="text" class="form-control" id="Director" name="Director" required />
    </div>
    <div class="form-group">
        <label for="Year">Year</label>
        <input type="number" class="form-control" id="Year" name="Year" required />
    </div>
    <div class="form-group">
        <label for="CopiesAvailable">Copies Available</label>
        <input type="number" class="form-control" id="CopiesAvailable" name="CopiesAvailable" required />
    </div>
    <button type="submit" class="btn btn-primary">Insert Movie</button>
</form>

@if (ViewBag.Error != null && ViewBag.Error != "")
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

@if (ViewBag.Antal != null)
{
    <div class="alert alert-success">
        @ViewBag.Antal movie were inserted.
    </div>
}
